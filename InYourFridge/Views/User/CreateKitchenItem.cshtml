@model KitchenItemViewModel
@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="main-content page-content">
    <!--==================================*
               Main Section
    *====================================-->
    <div class="main-content-inner">

        <div class="row mb-4">
            <div class="col-md-12 grid-margin">
                <div class="d-flex justify-content-between flex-wrap">
                    <div class="d-flex align-items-center dashboard-header flex-wrap mb-3 mb-sm-0">
                        <span><i class="feather ft-play"></i></span>
                        <h5 class="mr-4 mb-0 font-weight-bold">Create Kitchen Item</h5>
                        <div class="d-flex align-items-baseline dashboard-breadcrumb text-right">
                            <p class="text-muted mb-0 mr-1 hover-cursor">Kitchen &nbsp;|</p>
                            <i class="mdi mdi-chevron-right mr-1 text-muted"></i>
                            <p class="text-muted mb-0 mr-1 hover-cursor">Item</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <!-- Textual inputs -->
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card_title">Create Single Item</h4>
                        @*<p class="text-muted font-14 mb-4">All Fields are Required.</p>*@
                        @if (ViewBag.Code == null)
                        {

                        }
                        else if (ViewBag.Code == 200)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <strong>Hello!</strong> @ViewBag.Message
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <strong>Hello!</strong> @ViewBag.Message
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        }
                    <form method="post" id="userForm" asp-controller="User" asp-action="CreateKitchenItem">
                        <input hidden asp-for="CreatedBy" />
                        <input hidden asp-for="EntryTypeId" />
                        <p class="text-muted font-14 mb-4">@ViewBag.ErrorMessage</p>
                        <div class="row">
                            <div class="col-lg-4 col-md-3 col-12 form-group mb-3">
                                <label asp-for="CategoryId" class="col-form-label"></label>
                                <select asp-for="CategoryId" asp-items="@(new SelectList (Model.Categories,"Id","CategoryName" ))" class="form-control input-rounded" id="dpt-id">
                                    <option selected="selected">Select an Option</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                            <div class="col-lg-4 col-md-3 col-12 form-group mb-3">
                                <label asp-for="ItemName" class="col-form-label"></label>
                                <input asp-for="ItemName" class="form-control mb-4 input-rounded" type="text" id="Comment-input">
                                <span asp-validation-for="ItemName" class="text-danger"></span>
                            </div>
                            <div class="col-lg-8 col-md-4 col-12 form-group mb-3">
                                <label asp-for="HealthBenefit" for="Comment-input" class="col-form-label"></label>
                                <input asp-for="HealthBenefit" class="form-control mb-4 input-rounded" type="text" id="Comment-input">
                                <span asp-validation-for="HealthBenefit" class="text-danger"></span>
                            </div>
                            <div class="col-lg-12 col-md-12 col-12 form-button mb-3 text-right">
                                <button type="submit" class="btn btn-rounded btn-fixed-w btn-md btn-dark mb-3">Save</button>
                            </div>
                        </div>
                    </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- Textual inputs -->
    </div>

</div>
